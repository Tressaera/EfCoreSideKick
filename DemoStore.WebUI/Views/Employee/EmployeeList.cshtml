@model List<ResultEmployeeDTO>
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />


<div class="container">
    <br /><br />
<table class="table table-bordered">
<tr>
    <th>#</th>
    <th>Ad</th>
    <th>Soyad</th>
    <th>Maaş</th>
    <th>Departman</th>
    <th>Durum</th>
    <th>Sil</th>
    <th>Güncelle</th>
</tr>
<tr>
            @foreach(var item in Model)
            {
                <tr>
                <td>@item.EmployeeId</td>
                <td>@item.EmployeeName</td>
                <td>@item.EmployeeSurname</td>
                <td>@item.EmployeeSalary</td>
                <td>@item.EmployeeDepartment</td>
                <td>@item.EmployeeStatus</td>
                <td><a href="/Category/DeleteEmployee/@item.EmployeeId" class="btn btn-danger">Sil</a></td>
                <td><a href="/Category/UpdateEmployee/@item.EmployeeId" class="btn btn-success">Güncelle</a></td>
            </tr>
            }       
</table>
    <a href="/Employee/CreateEmployee" class="btn btn-primary">Yeni Müşteri Girişi</a>
</div>